{
        "compilerOptions": {
                "rootDirs": [
                        "./scripts/",
                        "./web/",
                        "./data"
                ],
                "baseUrl": ".",
                "outDir": "build",
                "incremental": true,
                "target": "es6",
                "module": "commonjs",
                "jsx": "react",
                "strict": true,
                "sourceMap": true,
                "strictNullChecks": true,
                "strictFunctionTypes": true,
                "strictBindCallApply": true,
                "strictPropertyInitialization": true,
                "noImplicitThis": true,
                "alwaysStrict": true,
                "esModuleInterop": true,
                "skipLibCheck": true,
                "forceConsistentCasingInFileNames": true,
                "resolveJsonModule": true
        },
        "include": [
                "web",
                "scripts",
                // "data"
        ]
}
